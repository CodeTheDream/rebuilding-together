

<% @repairs.each do |repair| %>
<% if VolunteerRepair.where('volunteer_id = ? AND repair_id = ?', @volunteer.id, repair.id).length == 0 %> 
    Repair Type: <%= repair.repair_type %><br/>
    Repair Notes: <%= repair.repair_notes %><br/>
    <%= link_to 'Sign up for a repair', add_repair_volunteer_path(repair), :method => "post" %>
    <% end %>
<% end %>



