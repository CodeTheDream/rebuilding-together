<div class='body'>

    <h4>My Profile</h4>
    
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
              <img src="<%= @volunteer.picture %>" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                <p class="card-title"><b>Name:</b> <%= @volunteer.first_name %> <%= @volunteer.last_name %></p>
                <p class="card-text"><b>Email:</b> <%= @volunteer.email %></p>
                <p class="card-text"><b>Phone:</b> <%= @volunteer.mobile_phone %></p>
                <p class="card-text"><b>Location:</b> <%= @volunteer.city %>, <%= @volunteer.state %></p>
                </div>
            </div>
        </div>
    </div>
            
    <h4>Personal Information</h4>
    
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="card-body">
                    <p class="card-text"><b>Birthdate:</b> <%= @volunteer.birthdate %></p>
                    <p class="card-text"><b>Employer:</b> <%= @volunteer.employer %></p>
                    <p class="card-text"><b>Gender:</b> <%= @volunteer.gender %></p>
                    <p class="card-text"><b>Position:</b> <%= @volunteer.position %></p>
                </div>
            </div>
        </div>
    </div>
    
    <h4>Skills/Interests & Availability</h4>
    
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="card-body">
                    <p class="card-text"><b>Availability:</b> <%= @volunteer.availability %></p>
                    <p class="card-text"><b>My Skills:</b> <%= @volunteer.skill %></p>
                    <p class="card-text"><b>Notes regarding my skills and availability:</b></p>
                    <p class="card-text"><%= @volunteer.volunteer_notes %></p>
                </div>
            </div>
        </div>
    </div>
</div>

