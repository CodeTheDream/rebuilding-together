<div>
    <%= form_for @volunteer do |f| %>
    <div>
        <h4>Basic Information</h4>
            <div>
                <%= f.label :picture, "Volunteer Photo:" %>
                <%= f.file_field :picture, placeholder: 'Upload a profile picture.' %> <br><br>
               
                <%= f.label :first_name, "First Name:" %>
                <%= f.text_field :first_name %> <br><br>
                
                <%= f.label :last_name, "Last Name:"%>
                <%= f.text_field :last_name %> <br><br>
               
                <%= f.label :email, "Email:"%>   
                <%= f.text_field :email %> <br><br>
               
                <%= f.label :mobile_phone, "Phone:"%>
                <%= f.telephone_field :mobile_phone %> <br><br>
              
                <%= f.label :city, "City:" %>
                <%= f.text_field :city %> <br><br>
               
                <%= f.label :state, "State:" %>
                <%= f.text_field :state %> <br><br>
            </div>            
    
        <h4>Personal Information</h4>
            <div>
                <%= f.label :birthdate, "Birthdate:" %>
                <%= f.date_field :birthdate %>  <br><br>
                <%= f.label :gender, "Gender: To which gender identity do you most identify with?"%>
            
                <%= f.select(:gender, options_for_select(['Female', 'Male', 'Other', 'Prefer Not to Answer'])) %> <br><br>

                <%= f.label :employer, "Employer:" %>
                <%= f.text_field :employer %> <br><br>
                <%= f.label :position, "Position:"%>
                <%= f.text_field :position %> <br><br>
            </div>
        
        <h4>Volunteer Interests and Availability</h4>
  
        <h5>Availability. Select all that apply.</h5>
                        <!-- style to make multiple checkbox options and style into columns -->
            <div>
                <%= f.radio_button :availability, 'Sunday' %>
                <%= f.label :availability, 'Sunday' %> <br><br>
                    
                <%= f.radio_button :availability, 'Monday' %>
                <%= f.label :availability, 'Monday' %> <br><br>
                
                <%= f.radio_button :availability, 'Tuesday' %>
                <%= f.label :availability, 'Tuesday' %> <br><br>
            
                <%= f.radio_button :availability, 'Wednesday' %>
                <%= f.label :availability, 'Wednesday' %> <br><br>
                   
                <%= f.radio_button :availability, 'Thursday' %>
                <%= f.label :availability, 'Thursday' %> <br><br>
                 
                <%= f.radio_button :availability, 'Friday' %>
                <%= f.label :availability, 'Friday' %> <br><br>
                
                <%= f.radio_button :availability, 'Saturday' %>
                <%= f.label :availability, 'Saturday' %> <br><br>
              
                <!-- Add optionfor volunteer to select from repairs, drop box -->
                <!--<%# select_tag 'repair_id', options_from_collection_for_select(@repair, :id, :type) %>-->
                <%= f.label :skill, "Skills & Interests" %>
                <%= f.text_field :skill %> <br><br>
              
                <%= f.label :volunteer_notes, "Notes regarding my skills and availability:"%>
                <%= f.text_area :volunteer_notes, cols: 100, rows: 3 %> <br><br>
            </div>
                <%= f.submit "Save" %>
    </div>           
    <% end %>
</div>
