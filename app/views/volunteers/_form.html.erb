<div>
    <%= form_for @volunteer do |f| %>
    <div>
    <h4>Basic Information</h4>
        <form>
            <div class="form-group">
                    <div>
                        <%= f.label :picture, "Volunteer Photo:" %>
                        <%= f.file_field :picture, placeholder: 'Upload a profile picture.' %>
                    </div>
            </div>
        </form>
        
        <form>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <%= f.label :first_name, "First Name:" %>
                        <%= f.text_field :first_name, class: "form-control" %> 
                    </div>
                    <div class="col-md-6">
                        <%= f.label :last_name, "Last Name:"%>
                        <%= f.text_field :last_name, class: "form-control" %> 
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <%= f.label :email, "Email:"%>   
                        <%= f.text_field :email, class: "form-control" %>
                    </div>
                    <div class="col-md-6">
                        <%= f.label :mobile_phone, "Phone:"%>
                        <%= f.telephone_field :mobile_phone, class: "form-control" %> 
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <%= f.label :city, "City:" %>
                        <%= f.text_field :city, class: "form-control" %>
                    </div>
                    <div class="col-md-6">
                        <%= f.label :state, "State:" %>
                        <%= f.text_field :state, class: "form-control" %>
                    </div>
                </div>
            </div>
    <h4>Personal Information</h4>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <%= f.label :birthdate, "Birthdate:" %>
                        <%= f.date_field :birthdate, class: "form-control" %>
                    </div>
                    <div class="col-md-6">
                        <%= f.label :gender, "Gender: To which gender identity do you most identify with?"%>
                        <%= f.select(:gender, options_for_select(['Female', 'Male', 'Other', 'Prefer Not to Answer'])) %>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <%= f.label :employer, "Employer:" %>
                        <%= f.text_field :employer, class: "form-control" %>
                    </div>
                    <div class="col-md-6">
                        <%= f.label :position, "Position:"%>
                        <%= f.text_field :position, class: "form-control" %>
                    </div>
                </div>
            </div>
 
    <h4>Volunteer Interests and Availability</h4>
    <h5>Availability. Select all that apply.</h5>
            <!-- style to make multiple checkbox options and style into columns -->
        <div class="form-group row">
            <div class="col-sm-2">Checkbox</div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                    Example checkbox
                    </label>
                </div>
            </div>
        </div>
 
                <%= f.radio_button :availability, 'Sunday' %>
                <%= f.label :availability, 'Sunday' %> <br><br>
                    
                <%= f.radio_button :availability, 'Monday' %>
                <%= f.label :availability, 'Monday' %> <br><br>
                
                <%= f.radio_button :availability, 'Tuesday' %>
                <%= f.label :availability, 'Tuesday' %> <br><br>
            
                <%= f.radio_button :availability, 'Wednesday' %>
                <%= f.label :availability, 'Wednesday' %> <br><br>
                   
                <%= f.radio_button :availability, 'Thursday' %>
                <%= f.label :availability, 'Thursday' %> <br><br>
                 
                <%= f.radio_button :availability, 'Friday' %>
                <%= f.label :availability, 'Friday' %> <br><br>
                
                <%= f.radio_button :availability, 'Saturday' %>
                <%= f.label :availability, 'Saturday' %> <br><br>
              
                <!-- Add optionfor volunteer to select from repairs, drop box -->
                <!--<%# select_tag 'repair_id', options_from_collection_for_select(@repair, :id, :type) %>-->
                <%= f.label :skill, "Skills & Interests" %>
                <%= f.text_field :skill %> <br><br>
              
                <%= f.label :volunteer_notes, "Notes regarding my skills and availability:"%>
                <%= f.text_area :volunteer_notes, cols: 100, rows: 3 %> <br><br>
            </div>
    
     
          
          <div class="form-group">
            <label for="exampleFormControlSelect2">Example multiple select</label>
            <select multiple class="form-control" id="exampleFormControlSelect2">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Example textarea</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
          </div>
        </form>
        
        

       
                <%= f.submit "Save" %>
    </div>           
    <% end %>
</div>
